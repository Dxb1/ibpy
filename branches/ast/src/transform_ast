#!/usr/bin/env python
from java import lexer
from java import parser
from java import walker


def transform(filename):
    if not filename:
        args = []
    else:
        args = [filename, ]
    
    L = lexer.Lexer(*args)
    P = parser.Parser(L)
    P.setFilename(L.getFilename())

    try:
        P.compilationUnit()
    except (Exception, ), exc:
       print '*** exception while parsing:'
       print exc
       return 1

    ast = P.getAST()
    if not ast:
       print '*** error: no AST generated.'
       return 2

    W = walker.Walker()
    print W.module(ast)
    return 0


if __name__ == '__main__':
    import sys
    import psyco
    psyco.full()

    try:
        name = sys.argv[1]
    except (IndexError, ):
        name = None
    ret = transform(name)
    sys.exit(ret)

